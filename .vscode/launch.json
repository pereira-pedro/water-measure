{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach API (Docker)",
      "address": "localhost",
      "port": 9229,
      "protocol": "inspector",
      "restart": true,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/usr/src/app",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/api/**", "!**/node_modules/**"],
      "trace": true
    }
  ]
}
